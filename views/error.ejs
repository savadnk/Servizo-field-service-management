<!-- Error - Styled like Blocked EJS -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Error</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap 5.3.2 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Remix Icon (optional warning glyph) -->
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet">

  <style>
    :root{
      --bg:#000000;
      --panel:#151821;
      --row:#1a1d24;
      --muted:#9aa3b2;
      --line:#232735;
      --chip:#222733;
      --chipText:#d8deea;
      --green:#22c55e;
      --blue:#3b82f6;
      --amber:#f59e0b;
      --cyan:#22d3ee;
      --danger:#ef4444;
    }

    body{ background:var(--bg); }

    .error-card{
      background:var(--panel);
      border:1px solid var(--line);
      border-radius:16px;
      padding:28px 24px;
      max-width:640px;
      width:100%;
      box-shadow:0 6px 24px rgba(0,0,0,0.45);
    }

    .error-icon{
      width:64px;
      height:64px;
      border-radius:50%;
      display:inline-grid;
      place-items:center;
      background:#211a1a;
      border:1px solid #3d2a2a;
      color:var(--danger);
      margin:0 auto 12px auto;
    }

    .error-title{
      color:#e8ecf4;
      letter-spacing:.2px;
      margin-bottom:6px;
    }

    .error-text{
      color:var(--muted);
      margin-bottom:18px;
    }

    .pill{
      padding:10px 14px;
      border-radius:999px;
      font-size:14px;
      border:1px solid #2a3143;
      background:#22283a;
      color:#cfe1ff;
    }

    .btn-home{
      background:#1f2634;
      color:#dbe7ff;
      border:1px solid #2b3b58;
      text-decoration:none;
    }
    .btn-home:hover{ background:#263149; }

    .btn-alt{
      background:#2a2314;
      color:#ffe2b4;
      border:1px solid #3f311c;
      text-decoration:none;
    }
    .btn-alt:hover{ background:#3a2d17; }

    .divider{
      height:1px;
      background:var(--line);
      margin:16px 0;
    }

    .tip{
      color:var(--muted);
      font-size:12px;
      margin:0;
    }
  </style>
</head>
<body class="d-flex align-items-center justify-content-center vh-100">
  <main class="error-card text-center" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="error-icon" aria-hidden="true">
      <i class="ri-error-warning-line" style="font-size:28px;"></i>
    </div>

    <h2 class="error-title">Oops! Something went wrong</h2>
    <p class="error-text"><%= error %></p>

    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
      <a href="/auth/login" class="pill btn-home">Go Home</a>
    </div>

    <div class="divider"></div>

  </main>
</body>
</html>
