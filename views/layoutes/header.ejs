

<header class="header d-flex justify-content-between align-items-center mb-3 p-3">
  <!-- Mobile toggle -->
  <button class="btn d-lg-none me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#appSidebar" aria-controls="appSidebar" aria-label="Open menu">
    <i class="ri-menu-2-line"></i>
  </button>

  <h3 class="m-0 fst-italic">Service Panel</h3>

  <div>
     <% if (user && user.role==="superadmin" ) { %>
      <a href="/superadmin/notifications" class="btn me-2">
        <i class="ri-notification-3-line"></i>
        <span class="text-light">Notifications</span>
      </a>
      <a href="/superadmin/settings" class="btn">
        <i class="ri-user-3-line"></i>
        <span class="text-light">Profile</span>
      </a>
    <% } else if (user && user.role==="admin" ) { %>
      <a href="/admin/notifications" class="btn me-2 position-relative d-inline-flex align-items-center">
        <div class="position-relative me-1">
          <i class="ri-notification-3-line"></i>
          <% if (typeof unreadCount !== 'undefined' && unreadCount > 0) { %>
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 0.65rem; padding: 0.25em 0.45em; transform: translate(-50%, 10%);">
              <%= unreadCount %>
            </span>
          <% } %>
        </div>
        <span class="text-light ms-1">Notifications</span>
      </a>
      <a href="/admin/settings" class="btn">
        <i class="ri-user-3-line"></i>
        <span class="text-light">Profile</span>
      </a>
    <% } else if (user && user.role==="worker" ) { %>
      <a href="/worker/notifications" class="btn me-2">
        <i class="ri-notification-3-line"></i>
        <span class="text-light">Notifications</span>
      </a>
      <a href="/worker/settings" class="btn">
        <i class="ri-user-3-line"></i>
        <span class="text-light">Profile</span>
      </a>
    <% } else if (user && user.role==="customer" ) { %>
      <a href="/customer/notifications" class="btn me-2">
        <i class="ri-notification-3-line"></i>
        <span class="text-light">Notifications</span>
      </a>
      <a href="/customer/settings" class="btn">
        <i class="ri-user-3-line"></i>
        <span class="text-light">Profile</span>
      </a>
    <% } %>
  </div>
</header>
