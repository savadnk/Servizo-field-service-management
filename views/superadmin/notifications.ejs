

<div class="container mt-4 ">
  <h2 class="mb-4 text-light">
     Notifications
  </h2>

  <div class="list-group text-light" style="max-height: 600px; overflow-y: auto;" >
    <% if (notifications.length > 0) { %>
      <% notifications.forEach((note) => { %>
        <div class="list-group-item d-flex justify-content-between align-items-center rounded mb-2 text-light" style="background-color: #151821; border:none;" >

          <!-- Left side: Icon + Message -->
          <div class="d-flex align-items-center">
            <% if (!note.isRead) { %>
              <span class="me-2" style="color: #16da64; font-size: 0.8rem;">●</span>
            <% } else { %>
              <span class="me-2 " style="color: black; font-size: 0.8rem;">●</span>
            <% } %>
            <div>
              <strong><%= note.message %></strong><br>
              <small class=""><%= new Date(note.createdAt).toLocaleString() %></small>
                            <!-- <p class="mb-0"><%= note.user.name %></p> -->

            </div>
          </div>

          <!-- Right side: Round "Mark as Read" button -->
          <div>
            <% if (!note.isRead) { %>
              <form action="/superadmin/notifications/<%= note._id %>/read" method="POST" class="d-inline">
                <button type="submit" 
                        class="btn btn-xs  rounded-circle rounded-1  d-flex align-items-center justify-content-center"
                        style="width: 32px; height: 32px; color: white;">
                  <i class="ri-check-line"></i>
                </button>
              </form>
            <% } else { %>
              <i class="ri-check-double-line  text-success"></i>
            <% } %>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="alert alert-info">No notifications found</div>
    <% } %>
  </div>
</div>

<style>
  .list-group-item {
  border: none !important;
}
</style>
