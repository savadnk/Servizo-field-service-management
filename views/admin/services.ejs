<!-- Service Requests - Styled like reference UI -->

<style>
  body {
    background: var(--bg);
  }

  .panel {
    background: var(--panel);
    border: 1px solid var(--line);
    border-radius: 12px;
    overflow: hidden;
  }

  .tbl {
    width: 100%;
    color: var(--txt);
    margin: 0;
  }

  .tbl thead th {
    font-weight: 600;
    color: #cdd6e5;
    background: #181b23;
    border-bottom: 1px solid var(--line);
    padding: 14px 16px;
    font-size: 13px;
    letter-spacing: .02em;
  }

  .tbl tbody td {
    padding: 14px 16px;
    border-top: 1px solid var(--line);
    vertical-align: middle;
    font-size: 14px;
  }

  .tbl tbody tr:hover {
    background: #1d212b;
  }

  .pill {
    padding: 6px 10px;
    border-radius: 999px;
    font-size: 12px;
    font-weight: 600;
    display: inline-block;
  }

  .pill.completed {
    background: #14261a;
    color: #bff7d3;
    border: 1px solid #254a34;
  }

  .pill.assigned {
    background: #1f2634;
    color: #d6e6ff;
    border: 1px solid #2b3b58;
  }

  .pill.progress {
    background: #2a2314;
    color: #ffe2b4;
    border: 1px solid #3f311c;
  }

  .pill.default {
    background: #232833;
    color: #cbd5e1;
    border: 1px solid #2d3340;
  }

  .actions {
    display: flex;
    gap: 10px;
    justify-content: flex-end;
  }

  .icon-btn {
    width: 34px;
    height: 34px;
    display: grid;
    place-items: center;
    border-radius: 8px;
    border: 1px solid #2a3040;
    color: #cfd8ea;
    background: #161a22;
  }

  .icon-btn:hover {
    background: #232a37;
    color: #ffffff;
  }

  .icon-view {
    color: #9dd1ff;
  }

  .icon-edit {
    color: #b6f7c8;
  }

  .icon-del {
    color: #f2b6b6;
  }

  /* .job-container {
  max-height: 400px;   
  overflow-y: auto;    
  border: 1px solid var(--line);
  border-radius: 0 0 12px 12px;
} */

  .table-container {
    max-height: 500px;
    /* scroll limit */
    overflow-y: auto;
    display: block;
  }

  .table-container table {
    border-collapse: collapse;
    width: 100%;
  }

  .table-container thead th {
    position: sticky;
    top: 0;
    background: #181b23;
    /* match your header color */
    z-index: 2;
  }


  /* Works in Chrome, Edge, Safari */
  .table-container::-webkit-scrollbar {
    width: 10px;
    /* scrollbar width */
  }

  .table-container::-webkit-scrollbar-track {
    background: var(--panel);
    /* track background */
    border-radius: 12px;
  }

  .table-container::-webkit-scrollbar-thumb {
    background: #444b5e;
    /* thumb color */
    border-radius: 12px;
    border: 2px solid var(--panel);
    /* spacing effect */
  }

  .table-container::-webkit-scrollbar-thumb:hover {
    background: #5a637a;
    /* hover color */
  }

  /* Firefox */
  .table-container {
    scrollbar-width: thin;
    /* "auto" | "thin" */
    scrollbar-color: #444b5e var(--panel);
    /* thumb | track */
  }
</style>
<div class="container py-4">
  <h2 class="mb-3 text-white">Service Requests</h2>

  <form method="get" action="/admin/services" class="mb-3">
    <!-- Status filter -->
    <select name="status"
      class="form-select form-select bg-black text-light rounded-pill border-1 border-dark px-4 py-2 fs-6 w-auto"
      onchange="this.form.submit()">
      <option value="">All Status</option>
      <option value="Pending" <%=selectedStatus==="Pending" ? "selected" : "" %>>Pending</option>
      <option value="Assigned" <%=selectedStatus==="Assigned" ? "selected" : "" %>>Assigned</option>
      <option value="Accepted" <%=selectedStatus==="Accepted" ? "selected" : "" %>>Accepted</option>
      <option value="Paused" <%=selectedStatus==="Paused" ? "selected" : "" %>>Paused</option>
      <option value="Completed" <%=selectedStatus==="Completed" ? "selected" : "" %>>Completed</option>
    </select>
  </form>


  <div class="panel">
    <div class="table-container">
      <table class="tbl">
        <thead>
          <tr>
            <th scope="col">REQUEST ID</th>
            <th scope="col">CUSTOMER NAME</th>
            <th scope="col">SERVICE TYPE</th>
            <th scope="col">ASSIGNED WORKER</th>
            <th scope="col">STATUS</th>
            <th scope="col" class="text-end pe-3">ACTIONS</th>
          </tr>
        </thead>
        <tbody>
          <% if (requests && requests.length> 0) { %>
            <% requests.forEach(req=> { %>
              <tr>
                <td>
                  <%= req.requestId %>
                </td>
                <td>
                  <%= req.customerName %>
                </td>
                <td>
                  <%= req.serviceType %>
                </td>
                <td>
                  <%= req.assignedWorker || 'â€”' %>
                </td>
                <td>
                  <span class="pill
                  <%= req.status === 'Completed' ? 'completed'
                      : req.status === 'Assigned' ? 'assigned'
                     
                      : 'default' %>">
                    <%= req.status %>
                  </span>
                </td>
                <td>
                  <div class="actions">
                    <form action="/admin/services/<%= req.jobId %>/delete" method="POST">
                      <button type="submit" class="icon-btn icon-del" title="Delete">
                        <i class="ri-delete-bin-line"></i>
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
              <% }) %>
                <% } else { %>
                  <tr>
                    <td colspan="6" class="text-center text-secondary py-4">
                      No service requests found
                    </td>
                  </tr>
                  <% } %>
        </tbody>
      </table>
    </div>
  </div>

</div>

<script>
  document.querySelectorAll('.icon-del').forEach(btn => {
    btn.addEventListener('click', function (e) {
      e.preventDefault(); // stop form for now
      const form = this.closest('form');

      Swal.fire({
        title: 'Are you sure?',
        text: 'This service request will be permanently deleted.',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#d33',
        cancelButtonColor: '#3085d6',
        confirmButtonText: 'Yes, delete it!'
      }).then((result) => {
        if (result.isConfirmed) {
          form.submit(); // proceed with form submit
        }
      });
    });
  });

</script>