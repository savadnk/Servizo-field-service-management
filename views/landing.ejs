            --row: #1a1d24;
            --muted: #9aa3b2;
            --line: #232735;
            --chip: #222733;
            --chipText: #d8deea;
            --green: #22c55e;
            --blue: #3b82f6;
            --card: #151821;
            --amber: #f59e0b;
            --cyan: #22d3ee;
            --danger: #ef4444;
            --txt: #e8ecf4;
            --grey: #4b5563;
            --text-100: #e8f1ee;
            --text-300: #a7b0ad;
            --muted-600: #4d4f55;
            --muted-500: #5a5c62;
            --brand-500: #16da64;
            --brand-600: #12b754;
            --focus: #86f3b1;
            --chip-border: #284430;
            --green-dim: #16a34a;
            --surface: #111418;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        html {
            scroll-behavior: smooth;
        }

        body {
            background-color: var(--bg);
            color: var(--txt);
            overflow-x: hidden;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Header Styles */
        header {
            background-color: var(--panel);
            position: fixed;
            width: 100%;
            z-index: 1000;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 0;
        }

        .logo {
            display: flex;
            align-items: center;
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--txt);
        }

        .logo span {
            color: var(--brand-500);
        }

        .nav-links {
            display: flex;
            gap: 30px;
        }

        .nav-links a {
            color: var(--txt);
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s;
            position: relative;
        }

        .nav-links a:hover {
            color: var(--brand-500);
        }

        .nav-links a::after {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 0;
            height: 2px;
            background-color: var(--brand-500);
            transition: width 0.3s;
        }

        .nav-links a:hover::after {
            width: 100%;
        }

        .auth-buttons {
            display: flex;
            gap: 15px;
        }

        .login-button {
            background-color: transparent;
            color: var(--txt);
            border: 2px solid var(--brand-500);
            padding: 10px 25px;
            border-radius: 5px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
        }

        .login-button:hover {
            background-color: rgba(22, 218, 100, 0.1);
        }

        .signup-button {
            background-color: var(--brand-500);
            color: var(--bg);
            border: none;
            padding: 10px 25px;
            border-radius: 5px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
        }

        .signup-button:hover {
            background-color: var(--brand-600);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(22, 218, 100, 0.3);
        }

        /* Hero Section */
        .hero {
            padding: 150px 0 100px;
            position: relative;
            overflow: hidden;
            min-height: 100vh;
            display: flex;
            align-items: center;
        }

        .hero-content {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 50px;
        }

        .hero-text {
            flex: 1;
            max-width: 600px;
        }

        .hero-text h1 {
            font-size: 3.5rem;
            line-height: 1.2;
            margin-bottom: 20px;
            background: linear-gradient(to right, var(--txt), var(--brand-500));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: fadeInUp 1s ease-out;
        }

        .hero-text p {
            font-size: 1.2rem;
            color: var(--text-300);
            margin-bottom: 30px;
            line-height: 1.6;
            animation: fadeInUp 1s ease-out 0.2s both;
        }

        .hero-buttons {
            display: flex;
            gap: 15px;
            animation: fadeInUp 1s ease-out 0.4s both;
        }

        .secondary-button {
            background-color: transparent;
            color: var(--txt);
            border: 2px solid var(--brand-500);
            padding: 10px 25px;
            border-radius: 5px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
        }

        .secondary-button:hover {
            background-color: rgba(22, 218, 100, 0.1);
        }

        .primary-button {
            background-color: var(--brand-500);
            color: var(--bg);
            border: none;
            padding: 10px 25px;
            border-radius: 5px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
        }

        .primary-button:hover {
            background-color: var(--brand-600);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(22, 218, 100, 0.3);
        }

        .hero-visual {
            flex: 1;
            display: flex;
            justify-content: center;
            position: relative;
        }

        .dashboard-preview {
            width: 100%;
            max-width: 500px;
            background-color: var(--panel);
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
            position: relative;
            animation: float 6s ease-in-out infinite;
        }

        .dashboard-header {
            background-color: var(--row);
            padding: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid var(--line);
        }

        .dashboard-title {
            font-weight: 600;
            color: var(--txt);
        }

        .dashboard-nav {
            display: flex;
            gap: 15px;
        }

        .nav-item {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background-color: var(--muted);
        }

        .dashboard-content {
            padding: 20px;
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
        }

        .dashboard-card {
            background-color: var(--card);
            border-radius: 8px;
            padding: 15px;
            height: 80px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            border-left: 3px solid var(--brand-500);
        }

        .card-title {
            font-size: 0.9rem;
            color: var(--muted);
            margin-bottom: 5px;
        }

        .card-value {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--txt);
        }

        .dashboard-chart {
            grid-column: span 2;
            background-color: var(--card);
            border-radius: 8px;
            padding: 15px;
            height: 150px;
            display: flex;
            align-items: flex-end;
            gap: 10px;
        }

        .chart-bar {
            flex: 1;
            background-color: var(--brand-500);
            border-radius: 3px 3px 0 0;
            animation: grow 2s ease-out;
        }

        .bar-1 { height: 70%; }
        .bar-2 { height: 40%; }
        .bar-3 { height: 90%; }
        .bar-4 { height: 60%; }
        .bar-5 { height: 30%; }

        /* Features Section */
        .features {
            padding: 100px 0;
            /* background-color: var(--surface); */
            min-height: 100vh;
            display: flex;
            align-items: center;
        }

        .section-title {
            text-align: center;
            margin-bottom: 60px;
        }

        .section-title h2 {
            font-size: 2.5rem;
            color: var(--txt);
            margin-bottom: 15px;
        }

        .section-title p {
            color: var(--text-300);
            max-width: 600px;
            margin: 0 auto;
            line-height: 1.6;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
        }

        .feature-card {
            background-color: var(--panel);
            border-radius: 10px;
            padding: 30px;
            transition: transform 0.3s, box-shadow 0.3s;
            border-top: 3px solid var(--brand-500);
            opacity: 0;
            transform: translateY(30px);
        }

        .feature-card.visible {
            opacity: 1;
            transform: translateY(0);
            transition: opacity 0.6s, transform 0.6s;
        }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
        }

        .feature-icon {
            width: 60px;
            height: 60px;
            background-color: var(--chip);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
            color: var(--brand-500);
            font-size: 1.5rem;
        }

        .feature-card h3 {
            font-size: 1.3rem;
            margin-bottom: 15px;
            color: var(--txt);
        }

        .feature-card p {
            color: var(--text-300);
            line-height: 1.6;
        }

        /* CTA Section */
        .cta-section {
            padding: 100px 0;
            background: linear-gradient(135deg, var(--surface) 0%, var(--panel) 100%);
            text-align: center;
            min-height: 70vh;
            display: flex;
            align-items: center;
        }

        .cta-content {
            max-width: 700px;
            margin: 0 auto;
        }

        .cta-content h2 {
            font-size: 2.5rem;
            margin-bottom: 20px;
            color: var(--txt);
        }

        .cta-content p {
            color: var(--text-300);
            margin-bottom: 30px;
            line-height: 1.6;
        }

        /* Footer */
        footer {
            /* background-color: var(--panel); */
            padding: 60px 0 30px;
            border-top: 1px solid var(--line);
        }

        .footer-content {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 40px;
            margin-bottom: 40px;
        }

        .footer-column h3 {
            color: var(--txt);
            margin-bottom: 20px;
            font-size: 1.2rem;
        }

        .footer-links {
            list-style: none;
        }

        .footer-links li {
            margin-bottom: 10px;
        }

        .footer-links a {
            color: var(--text-300);
            text-decoration: none;
            transition: color 0.3s;
        }

        .footer-links a:hover {
            color: var(--brand-500);
        }

        .copyright {
            text-align: center;
            padding-top: 30px;
            border-top: 1px solid var(--line);
            color: var(--text-300);
            font-size: 0.9rem;
        }

        /* Animations */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes float {
            0% {
                transform: translateY(0px);
            }
            50% {
                transform: translateY(-20px);
            }
            100% {
                transform: translateY(0px);
            }
        }

        @keyframes grow {
            from {
                height: 0;
            }
            to {
                height: var(--target-height);
            }
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .hero-content {
                flex-direction: column;
                text-align: center;
            }
            
            .hero-text h1 {
                font-size: 2.5rem;
            }
            
            .nav-links {
                display: none;
            }
            
            .features-grid {
                grid-template-columns: 1fr;
            }
            
            .auth-buttons {
                display: none;
            }
            
            .mobile-auth {
                display: flex;
                gap: 10px;
                margin-top: 20px;
            }
        }

        .mobile-auth {
            display: none;
        }

        /* Mobile Menu */
        .mobile-menu-btn {
            display: none;
            background: none;
            border: none;
            color: var(--txt);
            font-size: 1.5rem;
            cursor: pointer;
        }

        @media (max-width: 768px) {
            .mobile-menu-btn {
                display: block;
            }
            
